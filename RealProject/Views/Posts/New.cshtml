@model RealProject.Models.Post

<h2>New Post</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Posts")) 
{

    @Html.Label("Title", "Post Title")
    <br />
    @Html.TextBox("Title", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Content", "Post Content")
    <br />
    @Html.TextArea("Content", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
    <br /><br />

    <label>Select tag</label>
    @Html.ValidationMessageFor(m => m.TagId, "", new { @class = "text-danger" })
    @Html.DropDownListFor(m => m.TagId, new SelectList(Model.Tagger, "Value", "Text"),
    "Select tag", new { @class = "form-control" })
    <br />

    <button type="submit">Add post</button>
}


